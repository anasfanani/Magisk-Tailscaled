      log Info "Change setting to tun mode userspace-networking"
      sed -i 's/tailscaled_tun_mode=".*";/tailscaled_tun_mode="userspace-networking";/' "$setting_file"
      $tailscaled_service restart 
      $tailscaled_service hevsocks start
    ;;
    disable)
