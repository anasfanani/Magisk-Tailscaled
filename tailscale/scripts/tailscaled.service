      log Info "Change setting to tun mode tailscale0"
      sed -i 's/tailscaled_tun_mode=".*";/tailscaled_tun_mode="tailscale0";/' "$setting_file"
      $tailscaled_service hevsocks stop
      $tailscaled_service restart 
