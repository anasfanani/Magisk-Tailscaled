      sed -i "s/^\([[:space:]]*\)ipv6: .*/\1ipv6: $ipv6/" "${hevsocks_conf}"
      sed -i "s/^\([[:space:]]*\)name: .*/\1name: $hevsocks_ifname/" "${hevsocks_conf}"
      program start
